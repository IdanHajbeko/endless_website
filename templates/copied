@app.route("/login/<user_name>/<psw>")
def login(user_name, psw):
    if user_name in usernames:
        if psw in pasword:
            return render_template("how_to_use.html")
        else:
            return render_template("login_worng_psw.html")
    else:
        return render_template("login_worng_user_name.html")







